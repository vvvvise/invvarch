    "@types/vscode": "^1.96.0",
    "@yarnpkg/sdks": "^3.2.0",
    "fixpack": "^4.0.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
