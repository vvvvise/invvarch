    "@vvvvise/invvarch-ui": "workspace:*",
    "@vvvvise/invvarch-web": "workpace:*"
  },
  "devDependencies": {
    "@ardatan/relay-compiler": "^12.0.0",
    "@babel/core": "^7.26.0",
    "@changesets/cli": "^2.27.10",
