{
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["codegen.ts", "src/**/*.ts"],
  "files": ["codegen.ts", "src/main.ts"],
}
